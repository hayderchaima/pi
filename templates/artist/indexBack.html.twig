{% extends 'back.html.twig' %}

{% block title %}Artist index{% endblock %}

{% block body %}
    <h1>Artist index</h1>

    <div class="row">
        {% for artist in artists %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img class="card-img-top" src="{{ asset('assets/img/' ~ artist.imageartist) }}" alt="Artist Image">
                    <div class="card-body">
                        <h5 class="card-title">{{ artist.nom }}</h5>
                        <p class="card-text">{{ artist.biography }}</p>
                        <p class="card-text"><small class="text-muted">Nationality: {{ artist.nationalite }}</small></p>
                        <p class="card-text"><small class="text-muted">Birthdate: {{ artist.dateNaissance ? artist.dateNaissance|date('Y-m-d') : '' }}</small></p>
                        <a href="{{ path('app_artist_show_back', {'id': artist.id}) }}" class="btn btn-primary">Show</a>
                        <a href="{{ path('app_artist_edit_back', {'id': artist.id}) }}" class="btn btn-secondary">Edit</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-md-12">
                <p>No records found</p>
            </div>
        {% endfor %}
    </div>

    <a href="{{ path('app_artist_new_back') }}" class="btn btn-success">Create new</a>
    <a href="{{ path('exporterExcel') }}"
                                               class="btn btn-primary">Exporter en Excel</a>
                                        </div>
{% endblock %}
