{% extends 'front.html.twig' %}
{% block stylesheets %}
    
    <style>
        .pagination > .page-item > .page-link {
            padding: 10px 15px !important;
            border: 1px solid #ccc !important;
            color: #333 !important;
            background-color: #fff !important;
            border-radius: 5px !important;
        }

        .pagination > .page-item > .page-link:hover {
            background-color: #f0f0f0 !important;
        }
    </style>
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            {% for oeuvre in pagination %}
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100" data-aos="fade-up">
                        <!-- Product image -->
                        <img class="card-img-top" src="{{ asset('assets/img/' ~ oeuvre.image) }}" alt="..." width="350" height="300" />
                        
                        <!-- Card body -->
                        <div class="card-body text-center">
                            <!-- Product name -->
                            <h5 class="card-title fw-bolder">{{ oeuvre.titre }}</h5>
                            
                            <!-- Description -->
                            <p class="card-text">{{ oeuvre.description }}</p>
                            
                            <!-- Date -->
                            <p class="card-text">{{ oeuvre.dateCreation ? oeuvre.dateCreation|date('Y-m-d') : '' }}</p>
                            
                            <!-- Type -->
                            <p class="card-text">{{ oeuvre.type }}</p>

                            <!-- Buttons -->
                            <div class="mt-3">
                                <a href="{{ path('app_oeuvre_show', {'id': oeuvre.id}) }}" class="btn btn-primary">Show</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-warning">
                        No records found
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="mt-3">
                                <a href="{{ path('app_oeuvre_pdf') }}" class="btn btn-primary">PDF</a>
                            </div>
        <!-- Pagination -->
        <div class="pagination justify-content-center mt-4" style="font-size: 1.2rem; padding: 10px 15px;">
    {{ knp_pagination_render(pagination) }}
</div>
    </div>
{% endblock %}
