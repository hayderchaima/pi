{% extends 'back.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.prenom }}</td>
            </tr>
           
            <tr>
                <th>Role</th>
                <td>{{ user.role }}</td>
            </tr>
            <tr>
                       <th>Status</th>
                       <td>
                         {% if user.blocked %}
                          <span style="color: red; font-weight: bold;">Blocked</span>
                        {% else %}
                          <span style="color: green; font-weight: bold;">Not Blocked</span>
                        {% endif %}
                          </td>
                          </tr>
        </tbody>
    </table>

   <a href="{{ path('app_user_index') }}" class="btn btn-primary">Back to List</a>

<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-success">Edit</a>
<a href="{{ path('block_user', {'id': user.id}) }}" class="btn btn-danger">Block / Unblock</a>


{% endblock %}
